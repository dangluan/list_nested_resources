<div id='todolist_id_data' style='display:none;'><%= @todolist.id %></div>
<div class = "parent">
		<% @items.each do |i| %>
			<li class="item">
				<%= image_tag 'drag-icon.png' %><%= i.name %><input type="hidden" name="position" value="">
				<input class='item-id' value='<%= i.id %>' name='item-id' type='hidden'>
				<input class='item-position' value='<%= i.position %>' name='position-item' type='hidden'>
			</li>
		<% end %>
</div>
<div class="menu">
<a class="ajax-link button" href="/todolists/<%= @todolist.id %>/items/update_position" data-callback-method="doneOrdered" data-type="PUT"> I'm done reordering </a>
<a class="ajax-link button" href="/todolists/<%= @todolist.id %>" data-callback-method="goBack" data-type="GET"> back </a>
</div>


